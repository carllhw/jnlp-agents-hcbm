# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
continuation_indent_size = 8

[{*.yml,*.yaml}]
indent_size = 2

[*.xml]
indent_size = 2

[*.md]
max_line_length = 80
indent_size = 2
